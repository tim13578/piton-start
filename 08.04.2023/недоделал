x=0
y=0
def setup():
    global x,y
    size(600,600)
    textSize(20)
    textAlign(CENTER,CENTER)
    x=100
    y=100
def draw():
    global x,y
    myText=u"я люблю Россию"
    text(myText,x,y)
def keyPressed():
    global x,y
    if key==ENTER:
        y=y+100
    elif(TAB):
        x=x+80
    else:
        myText+=key
        text(mytext,x,y) 
